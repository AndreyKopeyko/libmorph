.повел
    удь,,"7"            // заб-удь(ся), заб-удь-те(сь)
.время Б        // будущее время
  .лицо 1
    уд,,"29"            // заб-уд-у(сь), заб-уд-ем(ся)
  .лицо 2
    уде,,"9"            // заб-уде-шь(ся), заб-уде-те(сь)
  .лицо 3
    уд,,"30"            // заб-уд-ет(ся), заб-уд-ут(ся)
.время П        // прошедшее время
    ыл,,"3"             // заб-ыл(-(ся),-а(сь),-о(сь),-и(сь))
  .действ
    ывш,,"5"            // заб-ывш-ий(ся)
  .страд
    ыт,,"4"             // заб-ыт-ый
  .деепр
    ыв                  // заб-ыв
    ывши,,,"2"          // заб-ывши(сь)
}

