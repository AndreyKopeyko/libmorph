.тип св 5b2Я, св 5b2Я$
//---------------------------------------------------------------------------
// Пример: расшуметься
//---------------------------------------------------------------------------
{
.инфинитив
    еть,,"1"            // расшум-еть-ся
.повел
    и,,"33"             // расшум-и(те)сь
.время Б        // будущее время
  .лицо 1
    '',,"46"            // расшумл-ю-сь, расшум-им-ся
  .лицо 2
    и,,"19"             // расшум-и-шь-ся, расшум-и-те-сь
  .лицо 3
    '',,"49"            // расшум-ит-ся, расшум-ят-ся
.время П        // прошедшее время
    ел,,"22"            // расшум-ел(-ся,-ась,-ось,-ись)
  .действ
    евш,,"21"           // расшум-евш-ий-ся
  .деепр
    евши,,"2"           // расшум-евши-сь
}

