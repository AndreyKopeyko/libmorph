//
// Подтип 5b2. Глагол на -еть, у которых перед -еть стоит п, б, м или в.
//

.тип нсв_нп 5b2
//---------------------------------------------------------------------------
// Пример: скорбеть
//---------------------------------------------------------------------------
{
.инфинитив
    еть                 // скорб-еть
.повел
    и,,"11"             // скорб-и(те)
.время Н        // настоящее время
  .лицо 1
    '',,"44"            // скорбл-ю, скорб-им
  .лицо 2
    и,,"13"             // скорб-и-шь, скорб-и-те
  .лицо 3
    '',,"47"            // скорб-ит, скорб-ят
  .действ
    ящ,,"16"            // скорб-ящ-ий
  .деепр
    я                   // скорб-я
.время П        // прошедшее время
    ел,,"15"            // скорб-ел(-,-а,-о,-и)
  .действ
    евш,,"16"           // скорб-евш-ий
  .деепр
    ев                  // скорб-ев
    евши                // скорб-евши
}

