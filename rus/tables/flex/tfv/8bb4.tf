.тип нсв 8b/b4Ф
//---------------------------------------------------------------------------
// Пример: жечь
//---------------------------------------------------------------------------
{
.инфинитив
    ечь,,,"1"           // ж-ечь(ся)
.повел
    ги,,"28"            // ж-ги(те)(сь)
.время Н        // настоящее время
  .лицо 1
    '',,"85"            // ж-гу(сь), ж-жем(ся)
  .лицо 2
    же,,"9"             // ж-же-шь(ся), ж-же-те(сь)
  .лицо 3
    '',,"86"            // ж-жет(ся), ж-гут(ся)
  .действ
    гущ,,"5"            // ж-гущ-ий(ся)
.время П        // прошедшее время
    '',,"жечь"          // ж-(-ег(ся),-гла(сь),-гло(сь),-гли(сь))
  .действ
    егш,,"5"            // ж-егш-ий(ся)
  .страд
    жен,,"6"            // ж-жен-ный
  .деепр
    егши,,,"2"          // ж-егши(сь)
}

