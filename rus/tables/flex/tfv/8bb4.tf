// Глаголы типа 8b/b, подтип 8b/b4, глаголы на -жечь
//

.таблица "жечь"
{
.число Е
  .род м
    ег,,,"1"            // ж-ег(ся)
  .род ж
    гла,,,"2"           // ж-гла(сь)
  .род с
    гло,,,"2"           // ж-гло(сь)
  .род
.число М
    гли,,,"2"           // ж-гли(сь)
}

